<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - CMS Player' : 'CMS Player Gustavo' %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Favicon -->
    <link rel="icon" href="/img/favicon.ico">
    <!-- CSRF Token para segurança -->
    <% if (locals.csrfToken) { %>
        <meta name="csrf-token" content="<%= csrfToken %>">
    <% } %>
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1 0 auto;
        }
        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-play-circle-fill me-2"></i>
                CMS Player Gustavo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <% if (locals.user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard"><i class="bi bi-speedometer2 me-1"></i> Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/media"><i class="bi bi-images me-1"></i> Mídias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/rss"><i class="bi bi-rss me-1"></i> RSS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/playlists"><i class="bi bi-collection-play me-1"></i> Playlists</a>
                        </li>
                        <% if (locals.user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/users"><i class="bi bi-people me-1"></i> Usuários</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/groups"><i class="bi bi-diagram-3 me-1"></i> Grupos</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link" href="/players"><i class="bi bi-display me-1"></i> Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/templates"><i class="bi bi-file-earmark-code me-1"></i> Templates</a>
                        </li>
                        <% if (locals.user.isAdmin) { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill me-1"></i> Administração
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" href="/system/settings"><i class="bi bi-sliders me-1"></i> Configurações</a></li>
                                    <li><a class="dropdown-item" href="/system/logs"><i class="bi bi-journal-text me-1"></i> Logs</a></li>
                                    <li><a class="dropdown-item" href="/admin/saml-info"><i class="bi bi-shield-lock me-1"></i> Configuração SSO</a></li>
                                </ul>
                            </li>
                        <% } %>
                    <% } %>
                </ul>
                <ul class="navbar-nav">
                    <% if (locals.user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> <%= locals.user.name %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-1"></i> Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-1"></i> Sair</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login"><i class="bi bi-box-arrow-in-right me-1"></i> Entrar</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container py-4">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-light py-3 border-top mt-auto">
        <div class="container text-center">
            <p class="mb-0">&copy; <%= new Date().getFullYear() %> CMS Player Gustavo. Todos os direitos reservados.</p>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    <%- typeof scripts !== 'undefined' ? scripts : '' %>
    
    <!-- Script para remover requisições problemáticas de CORS -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Remover qualquer script que esteja causando problemas de CORS (dlnk.one)
            const problematicScripts = document.querySelectorAll('script[src*="dlnk.one"]');
            problematicScripts.forEach(script => script.remove());
            
            // Também evitar que futuros scripts problemáticos sejam adicionados
            const originalCreateElement = document.createElement;
            document.createElement = function(tagName) {
                const element = originalCreateElement.call(document, tagName);
                if (tagName.toLowerCase() === 'script') {
                    const originalSetAttribute = element.setAttribute;
                    element.setAttribute = function(name, value) {
                        if (name === 'src' && value.includes('dlnk.one')) {
                            console.warn('Blocked problematic script:', value);
                            return element;
                        }
                        return originalSetAttribute.call(this, name, value);
                    };
                }
                return element;
            };
        });
    </script>
</body>
</html> 